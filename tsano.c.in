/* atomic loads */
$_begin(BITS = [[8; 16; 32; 64; 128]]);
uBITS_t
__tsan_atomicBITS_load(const volatile uBITS_t *a, int mo)
{
    (void)mo;
    return __atomic_load_n(a, __ATOMIC_SEQ_CST);
}
$_end();

/* atomic stores */
$_begin(BITS = [[8; 16; 32; 64; 128]]);
void
__tsan_atomicBITS_store(volatile uBITS_t *a, uBITS_t v, int mo)
{
    (void)mo;
    __atomic_store_n(a, v, __ATOMIC_SEQ_CST);
}
$_end();


/* xchg */
$_begin(BITS = [[8; 16; 32; 64; 128]]);
uBITS_t
__tsan_atomicBITS_exchange(volatile uBITS_t *a, uBITS_t v, int mo)
{
    (void)mo;
    return __atomic_exchange_n(a, v, __ATOMIC_SEQ_CST);
}
$_end();

/* fetch_RMW */
$_begin(OP = [[add; sub; and; or ; xor; nand]], BITS = [[8; 16; 32; 64; 128]]);
uBITS_t
__tsan_atomicBITS_fetch_OP(volatile uBITS_t *a, uBITS_t v, int mo)
{
    (void)mo;
    return __atomic_fetch_OP(a, v, __ATOMIC_SEQ_CST);
}
$_end();


/* compare_exchange_{strong,weak} */
$_map(PARAM_strong, 0);
$_map(PARAM_weak, 1);
$_begin(SUF = [[strong; weak]], BITS = [[8; 16; 32; 64; 128]]);
int
__tsan_atomicBITS_compare_exchange_SUF(volatile uBITS_t *a, uBITS_t *c,
                                       uBITS_t v, int mo)
{
    (void)mo;
    return __atomic_compare_exchange_n(a, c, v, PARAM_SUF, __ATOMIC_SEQ_CST,
                                       __ATOMIC_SEQ_CST);
}
$_end();

/* compare_exchange_val */
$_begin(BITS = [[8; 16; 32; 64; 128]]);
uBITS_t
__tsan_atomicBITS_compare_exchange_val(volatile uBITS_t *a, uBITS_t c,
                                       uBITS_t v, int mo)
{
    (void)mo;
    (void)__atomic_compare_exchange_n(a, &c, v, 0, __ATOMIC_SEQ_CST,
                                      __ATOMIC_SEQ_CST);
    return c;
}
$_end();

/* atomic fences */
void
__tsan_atomic_thread_fence(int mo)
{
    (void)mo;
    __atomic_thread_fence(__ATOMIC_SEQ_CST);
}

void
__tsan_atomic_signal_fence(int mo)
{
    (void)mo;
    __atomic_signal_fence(__ATOMIC_SEQ_CST);
}
